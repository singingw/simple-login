<form action="/" method="post">
  <div>
    <h1>Account Login</h1>
  </div>
  <div class="mt-3">
    <input type="email" class="form-control col-5" name="Email" placeholder="Email" required>
  </div>
  <div class="mt-3 mb-7">
    <input type="password" class="form-control col-5" name="Password" placeholder="Password" required>
  </div>
  <div class="mt-3">
    <button type="submit" class="btn btn-outline-primary pr-5 pl-5">Sign in</button>
  </div>
</form>
{{#if isError}}
<div class="alert alert-danger mt-3" role="alert">
  <span class="m-2" style="color: brown;">Username 或 Password 錯誤</span>
</div>
{{/if}}